class ListNode:
    def __init__(self, val=0, next=None):
        self.val = val
        self.next = next

class Solution:
    def addTwoNumbers(self, l1, l2):
        dummy_head = ListNode(0)  # A dummy node to help simplify the code
        current = dummy_head
        carry = 0
        
        # Traverse both lists
        while l1 or l2 or carry:
            # Get the values of the current nodes (or 0 if the node is None)
            val1 = l1.val if l1 else 0
            val2 = l2.val if l2 else 0
            
            # Add the two values and the carry from the previous iteration
            total = val1 + val2 + carry
            carry = total // 10  # Carry is the quotient
            current.next = ListNode(total % 10)  # The current digit is the remainder
            
            # Move to the next node in the result list
            current = current.next
            
